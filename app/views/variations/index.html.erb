<p id="notice"><%= notice %></p>

<h1>Variations for <%= @product.name %></h1>

<table>
  <thead>
    <tr>
      <th>Variation Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @variations.each do |variation| %>
      <tr>
        <td><%= variation.title %></td>
        <td><%= link_to 'Show Product', [@product] %></td>
        <td><%= link_to 'Edit Variation', edit_product_variation_path(@product, variation) %></td>
        <td><%= link_to 'Destroy Variation', [@product, variation], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Variation', new_product_variation_path(@product) %>
<%= link_to 'Show Product', product_path(@product) %>
